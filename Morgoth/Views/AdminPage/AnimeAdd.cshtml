@model EntityLayer.Concrete.Anime
@{
    ViewData["Title"] = "AnimeAdd";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}

@using (Html.BeginForm("AnimeAdd", "AdminPage", FormMethod.Post))
{
    @Html.Label("Anime Adı")
    @Html.TextBoxFor(x => x.AnimeName, new { @class = "form-control" })
    @*@Html.ValidationMessageFor(x => x.StockName)*@
    <br />
    <br />
    @Html.Label("Anime Description")
    @Html.TextBoxFor(x => x.AnimeDescription, new { @class = "form-control" })
    @*@Html.ValidationMessageFor(x => x.StockCode)*@
    <br />
    <br />
    @Html.Label("Anime Genre")
    @Html.TextBoxFor(x => x.AnimeGenre, new { @class = "form-control" })
    @*@Html.ValidationMessageFor(x => x.Registerdate)*@
    <br />
    <br />
    @Html.Label("Anime Episode")
    @Html.TextBoxFor(x => x.AnimeEpisode, new { @class = "form-control" })
    @*@Html.ValidationMessageFor(x => x.ImageUrl)*@
    <br />
    <br />
    @Html.Label("Anime Status")
    @Html.TextBoxFor(x => x.AnimeStatus, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Image URl")
    @Html.TextBoxFor(x => x.AnimeImageUrL, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Duration")
    @Html.TextBoxFor(x => x.Duration, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Quality")
    @Html.TextBoxFor(x => x.Quality, new { @class = "form-control" })
    <br/>
    <button class="btn btn-info" type="submit">Kaydet</button>
}